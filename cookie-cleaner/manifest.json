{
    "manifest_version": 2,
    "name": "Cookie Cleaner",
    "description": "Cookie Cleaner is shortcut to clean the cookie of a specific domain website",
    "version": "1.0", 
    "browser_action": { 
        "default_popup": "views/popup/popup.html",
        "default_icon": {
            "16": "images/vacuum-cleaner_16.png",
            "32": "images/vacuum-cleaner_32.png",
            "48": "images/vacuum-cleaner_64.png",
            "64": "images/vacuum-cleaner_64.png",
            "256": "images/vacuum-cleaner_256.png"
          }
    },
    "options_ui": {
        "page": "views/options/options.html",
        "open_in_tab": true
    },
    "permissions": [
        "storage",
        "declarativeContent",
        "cookies",
        "https://*/",
        "http://*/"
    ]
}